<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eCashWalletApp.Tab2"
             Title="Tab2">
    <Shell.TitleView>
        <Grid Margin="0,0,20,0" ColumnDefinitions="*,30">
            <Label
                BackgroundColor="Transparent"
                Text="Good morning Oragon!"
                TextColor="White"
                FontSize="15"
                FontFamily="MontserratBold"
                VerticalOptions="Center" />
            <Border  Grid.Column="1" WidthRequest="35" HeightRequest="35"
                     Stroke="{AppThemeBinding Light={StaticResource WhiteBrush}}"
                     StrokeShape="RoundRectangle 50" StrokeThickness="1">
                <Image
                    HeightRequest="34"
                    HorizontalOptions="Center"
                    Source="pita.png"
                    VerticalOptions="Center"
                    WidthRequest="34" />
            </Border>
        </Grid>
    </Shell.TitleView>
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!2"
            VerticalOptions="Center" TextColor="White"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>